          "fullName": {
            "maxLength": 100,
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          }
        }
      },
      "ResetPasswordRequestDto": {
        "required": [
          "token",
          "newPassword"
        ],
        "type": "object",
        "properties": {
